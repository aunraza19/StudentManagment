using System;
using System.Collections.Generic;
using System.Linq;
using System.Threading.Tasks;
using System.Windows.Forms;

namespace WindowsFormsApp1VPL
{
    public partial class MainForm : Form
    {
        List<Student> students = new List<Student>();

        public MainForm()
        {
            InitializeComponent();
        }

        private async void MainForm_Load(object sender, EventArgs e)
        {
            lblStatus.Text = "Loading...";
            await Task.Run(() => students = StudentRepository.Load());
            dataGridView1.DataSource = students;
            lblStatus.Text = "Loaded Successfully";
        }

        private void label1_Click(object sender, EventArgs e)
        {
            // Empty handler for label click
        }

        private void button1_Click(object sender, EventArgs e)
        {
            // Add button
            try
            {
                students.Add(new Student(
                    int.Parse(textBox1.Text),
                    textBox2.Text,
                    double.Parse(textBox3.Text)));

                RefreshGrid();
                StudentRepository.Save(students);
            }
            catch
            {
                MessageBox.Show("Invalid Input!");
            }
        }

        private void button2_Click(object sender, EventArgs e)
        {
            // Update button
            int id = int.Parse(textBox1.Text);
            Student s = students.FirstOrDefault(x => x.Id == id);
            if (s != null)
            {
                s.Name = textBox2.Text;
                s.Marks = double.Parse(textBox3.Text);
                RefreshGrid();
                StudentRepository.Save(students);
            }
        }

        private void button3_Click(object sender, EventArgs e)
        {
            // Delete button
            if (dataGridView1.CurrentRow == null) return;
            int id = (int)dataGridView1.CurrentRow.Cells[0].Value;
            students.RemoveAll(s => s.Id == id);
            RefreshGrid();
            StudentRepository.Save(students);
        }

        private void button4_Click(object sender, EventArgs e)
        {
            // Search button
            dataGridView1.DataSource = students
                .Where(s => s.Name.ToLower().Contains(textBox4.Text.ToLower()))
                .ToList();
        }

        private void button5_Click(object sender, EventArgs e)
        {
            // Count button
            MessageBox.Show("Total Students: " + students.Count);
        }

        void RefreshGrid()
        {
            dataGridView1.DataSource = null;
            dataGridView1.DataSource = students;
        }
    }
}
